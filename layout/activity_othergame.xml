<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <ImageButton
        android:id="@+id/fb_back"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/bg_recommended"
        android:elevation="10dp"
        android:src="@drawable/ic_back"
        tools:ignore="ContentDescription" />


    <RelativeLayout
        android:id="@+id/o_r_1"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/fb_back"
        android:background="@drawable/bg_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/o_t_n_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:fontFamily="@font/nunito_bold"
                android:text="Title"
                android:textColor="@color/dark_late_gray" />

            <TextView
                android:id="@+id/o_t_n_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/o_t_n_1"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="14sp"
                android:text="$0"
                android:fontFamily="@font/nunito_black"
                android:textColor="@color/light_sea_green" />

            <ImageView
                android:id="@+id/image_location_1"
                android:src="@drawable/ic_location"
                android:layout_below="@+id/o_t_n_2"
                android:layout_marginStart="10dp"
                android:layout_marginTop="2dp"
                android:layout_width="12dp"
                android:layout_height="12dp"/>

            <TextView
                android:id="@+id/o_t_n_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/image_location_1"
                android:layout_below="@+id/o_t_n_2"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Location"
                android:textColor="@color/dark_gray"
                android:textSize="11sp"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/o_t_n_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/o_t_n_3"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="fitCenter" />

        </RelativeLayout>

    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/o_r_2"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/o_r_1"
            android:background="@drawable/bg_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/o_t_n1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/nunito_bold"
                    android:text="Title"
                    android:textColor="@color/dark_late_gray" />

                <TextView
                    android:id="@+id/o_t_n2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/o_t_n1"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="14sp"
                    android:text="$0"
                    android:fontFamily="@font/nunito_black"
                    android:textColor="@color/light_sea_green" />

                <ImageView
                    android:id="@+id/image_location1"
                    android:src="@drawable/ic_location"
                    android:layout_below="@+id/o_t_n2"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_width="12dp"
                    android:layout_height="12dp"/>

                <TextView
                    android:id="@+id/o_t_n3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/image_location1"
                    android:layout_below="@+id/o_t_n2"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/nunito_bold"
                    android:text="Location"
                    android:textColor="@color/dark_gray"
                    android:textSize="11sp"
                    tools:ignore="SmallSp" />

                <TextView
                    android:id="@+id/o_t_n4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/o_t_n3"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:scaleType="fitCenter" />

            </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>