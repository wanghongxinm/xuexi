<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.message.MessageFragment">

        <RelativeLayout
                android:id="@+id/container_choose_service"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/M_1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/bg_header">

                <ImageView
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:id="@+id/image_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/bg_item_choose_services"
                    android:padding="12dp"
                    android:src="@drawable/account" />

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/image_1"
                    android:layout_marginTop="5dp"
                    android:text="@string/Account"
                    android:textAlignment="center"
                    android:fontFamily="@font/nunito_bold"
                    android:gravity="center"
                    android:textColor="@color/dark_late_gray"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/M_2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="90dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/bg_header">

                <ImageView
                        android:id="@+id/image_4"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/bg_item_choose_services"
                        android:padding="12dp"
                        android:src="@drawable/message2"
                        tools:ignore="ContentDescription" />

                <TextView
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:layout_below="@+id/image_4"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/nunito_bold"
                        android:text="@string/set"
                        android:gravity="center"
                        android:textColor="@color/dark_late_gray"
                        android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/M_3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="160dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/bg_header">

                <ImageView
                        android:id="@+id/image_3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_item_choose_services"
                        android:padding="12dp"
                        android:src="@drawable/help"
                        tools:ignore="ContentDescription" />

                <TextView
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:layout_below="@+id/image_3"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:fontFamily="@font/nunito_bold"
                        android:text="@string/help"
                        android:textColor="@color/dark_late_gray"
                        android:textSize="20sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/M_4"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="230dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/bg_header">

                <ImageView
                        android:id="@+id/image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_item_choose_services"
                        android:padding="12dp"
                        android:src="@drawable/feedback"
                        tools:ignore="ContentDescription" />

                <TextView
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:layout_below="@+id/image_3"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:fontFamily="@font/nunito_bold"
                        android:text="@string/Feedback"
                        android:textColor="@color/dark_late_gray"
                        android:textSize="20sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/M_5"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="300dp"
                android:layout_marginEnd="25dp"
                android:background="@drawable/bg_header">

                <ImageView
                        android:id="@+id/image_2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_item_choose_services"
                        android:padding="12dp"
                        android:src="@drawable/aboutme"
                        tools:ignore="ContentDescription"/>

                <TextView
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:layout_below="@+id/image_2"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/nunito_bold"
                        android:text="@string/About_me"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="@color/dark_late_gray"
                        android:textSize="20sp" />

            </LinearLayout>

        </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>