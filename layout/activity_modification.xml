<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".menu.message.MessageFragment">

    <!-- Layout Before Login -->
    <RelativeLayout
        android:id="@+id/container_before_login"
        android:visibility="visible"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/R_back_1"
            android:layout_width="30dp"
            android:layout_height="27dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_recommended"
            android:elevation="10dp"
            android:src="@drawable/ic_back" />

        <ImageView
                    android:id="@+id/bg_message"
                    android:layout_below="@+id/R_back_1"
                    android:src="@drawable/bg_message"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="50dp"

                    android:layout_marginEnd="50dp"
                    android:layout_width="150dp"
                    android:layout_height="140dp"/>

            <EditText
                android:id="@+id/R_password"
                android:hint="请输入您的新密码"
                android:inputType="textPassword"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/bg_message"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_width="320dp"
                android:layout_height="50dp" />

            <View
                android:id="@+id/R_v2"
                android:layout_below="@id/R_password"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/bg_search" />

            <EditText
                android:id="@+id/R_password1"
                android:hint="请输入您的新密码"
                android:inputType="textPassword"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/R_v2"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_width="320dp"
                android:layout_height="50dp" />

            <View
                android:id="@+id/R_v3"
                android:layout_below="@id/R_password1"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/bg_search" />


        <EditText
            android:id="@+id/r_wen1"
            android:layout_below="@id/R_v3"
            android:gravity="center_horizontal"
            android:layout_marginStart="80dp"
            android:layout_marginTop="20dp"
            android:hint="您身份证后四位"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:inputType="text"
            tools:ignore="Autofill" />

        <View
            android:id="@+id/R_v4"
            android:layout_below="@id/r_wen1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/bg_search" />

        <EditText
            android:id="@+id/r_wen2"
            android:gravity="center_horizontal"
            android:layout_marginStart="80dp"
            android:layout_marginTop="20dp"
            android:hint="您手机号码后四位"
            android:layout_below="@+id/R_v4"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:inputType="text"
            tools:ignore="Autofill" />


        <LinearLayout
            android:gravity="center"
            android:layout_below="@+id/r_wen2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                    android:id="@+id/R_login"
                    android:text="@string/register_jump"
                    android:textSize="18sp"
                    android:layout_marginStart="120dp"
                    android:layout_width="120dp"
                    android:layout_height="50dp"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
